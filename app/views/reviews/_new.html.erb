<div class="card m-5">

  <h4 class="card-header text-center">Review your trip with <%= @spaceship.name %></h4>

  <div class="card-body">

    <%= simple_form_for([@spaceship, @review]) do |f| %>
      <%= f.input :comment, label: 'Insert your comment', placeholder: '2 to 80 characters', error: 'Comment is mandatory, min 2 max 80 characters' %>
      <%= f.input :stars, label: 'Your rating', placeholder: 'Please rate from 1 to 5', error: 'Please rate from 1 to 5' %>
      <%= f.submit "Post Review", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>

</div>
