<div class="card m-5">

  <h4 class="card-header text-center">About your splendid spaceship</h4>

  <div class="card-body">

    <%= simple_form_for @spaceship do |f| %>
      <%= f.input :name, placeholder: "Shuttle Up" %>
      <%= f.input :address, placeholder: "Earth, Solar System, Milky Way Galaxy" %>
      <%= f.input :description, placeholder: "Tell us more about how splendid your spaceship is" %>
      <%= f.input :unit_price, placeholder: "30000" %>
      <%= f.input :size %>
      <%= f.input :max_speed %>
      <%= f.input :capacity %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Add my spaceship", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>

</div>
