<div class="row justify-content-center my-4">
  <h1 class="m-0">Need a space ride? The best spacecrafts are here!</h1>
</div>

<div class="row justify-content-center mb-4">
  <%= render 'shared/search-bar' %>
</div>

<div class="row justify-content-center">

  <% @spaceships.each do |spaceship| %>

    <%= link_to spaceship_path(spaceship) do %>

      <div class="card-ship m-2">
        <%= image_tag spaceship.main_pic_url, class: "spaceship-img", alt: "spaceship", width: 350 %>
        <div class="card-ship-infos">
          <div> 
            <h2><%= spaceship.name %></h2>
            <p><%= spaceship.description.first(80) %></p>
          </div>
            
          <h2 class="card-ship-pricing"><%= spaceship.unit_price %>â‚¬</h2>
          <img src="https://pbs.twimg.com/profile_images/794107415876747264/g5fWe6Oh_400x400.jpg" class="card-ship-user avatar-bordered" />
        </div>
      </div>
    <% end %>

  <% end %>

</div>